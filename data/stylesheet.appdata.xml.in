<component type="runtime">
  <!-- NOTE: this ID format is required for automatic Flatpak theme matching -->
  <id>org.gtk.Gtk3theme.elementary</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>System Stylesheet</name>
  <summary>The look and feel for elementary OS</summary>
  <description>
    <p>An original Gtk.CSS stylesheet designed specifically for elementary OS and its desktop environment: Pantheon.</p>
  </description>
  <provides>
    <id>io.elementary.stylesheet</id>
  </provides>
  <releases>
    <release version="7.0.1" date="2022-09-26" urgency="medium">
      <description>
        <p>Improvements:</p>
        <ul>
          <li>Checkerboard styles are more subtle</li>
          <li>Set `large-icons` size on headerbars to 24px</li>
          <li>Adjust header layout and typography in Granite.SimpleSettingsPage</li>
          <li>Infobars: set correct button margins</li>
          <li>Add padding to Gtk.Entry's completion popover</li>
        </ul>
        <p>Fixes:</p>
        <ul>
          <li>Correct .title-4 padding in Lists</li>
          <li>Buttons: don't set font weight for children like popovers</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/stylesheet/issues/1209">Headerbars: correct window control spacing in RTL, and separator width</issue>
        <issue url="https://github.com/elementary/stylesheet/issues/1216">Fix arrow size in disabled comboboxes in popovers</issue>
        <issue url="https://github.com/elementary/stylesheet/issues/1219">Show scale marks</issue>
      </issues>
    </release>
    <release version="7.0.0" date="2022-04-20" urgency="medium">
      <description>
        <p>New Features:</p>
        <ul>
          <li>Support for Gtk4</li>
        </ul>
        <p>Fixes:</p>
        <ul>
          <li>Fix titlebar in GNOME Web 42</li>
          <li>Fix font style for bold labels in some languages</li>
          <li>ModelButtons: add margin between checks, radios, and labels</li>
        </ul>
      </description>
    </release>
    <release version="6.1.1" date="2021-11-23" urgency="medium">
      <description>
        <p>Improvements:</p>
        <ul>
          <li>Improve contrast of horizontal separators in dark style</li>
        </ul>
        <p>Fixes:</p>
        <ul>
          <li>Use the accent color for highlighting in IBus candidate window</li>
          <li>Fix font style for title labels in headerbars</li>
        </ul>
      </description>
    </release>
    <release version="6.1.0" date="2021-10-22" urgency="medium">
      <description>
        <ul>
          <li>Support for Hdy.Tabbar</li>
          <li>Fix accent class for Gtk.Scale</li>
          <li>Flat titlebars inherit background color for views and sidebars</li>
        </ul>
      </description>
    </release>
    <release version="6.0.0" date="2021-07-15" urgency="medium">
      <description>
        <ul>
          <li>Complete redesign</li>
        </ul>
      </description>
    </release>
  </releases>
  <content_rating type="oars-1.1" />
  <translation type="gettext">io.elementary.stylesheet</translation>
  <compulsory_for_desktop>Pantheon</compulsory_for_desktop>
  <developer_name>elementary, Inc.</developer_name>
  <url type="homepage">https://elementary.io</url>
  <url type="bugtracker">https://github.com/elementary/stylesheet/issues</url>
</component>
