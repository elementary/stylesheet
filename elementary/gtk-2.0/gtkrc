	bg[SELECTED]				= @base_color
	bg[INSENSITIVE]				= @base_color
	
	engine "murrine" {
		border_shades 			= {1.05, 1.05}
		contrast                = 0.85
		gradient_shades         = {1.0,1.5,1.6,2.5}
		shadow_shades     		= {2.0,2.0}
	}
}

